<body>
  <h1><strong>Books</strong></h1>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %>
            <%= link_to "Edit", edit_book_path(book) %>
            <%= link_to "Destroy", book_path(book), method: :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class ="new_book">
    <h1>New book</h1>
    <%= form_with model:@book, local:true do |f| %>

    <div>Title</div>
    <%= f.text_field :title %>

    <div>Body</div>
    <%= f.text_area :body %>

    <br>

    <%= f.submit 'Create Book' %>

    <% end %>
  </div>

</body>