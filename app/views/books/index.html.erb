

<% if flash[:del] %>
<div class="flash">
  <%= flash[:del] %>
</div>
<% end %>

<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books = Book.all %>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %>
            <%= link_to "Edit", edit_book_path(book) %>
            <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class ="new_book">
    <h2>New book</h2>

    <%= form_with model:@book, local:true do |f| %>

    <% if @book.errors.any? %>
    <h5><div class="er"><%= @book.errors.count %> errors prohibited this book from being saved:</div></h5>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><div class="er"><%= message %></div></er>
      <% end %>
    </ul>
  <% end %>



    <div>Title</div>
    <div class="field"><%= f.text_field :title %></div>

    <div>Body</div>
    <div class="field"><%= f.text_area :body %></div>

    <%= f.submit 'Create Book' %>

    <% end %>
  </div>

</body>